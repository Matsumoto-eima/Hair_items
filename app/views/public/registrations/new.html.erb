<div class="container mt-5 mb-5">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">

<h2>新規会員登録</h2>
   </div>
 </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "お名前" %><br />
    <%= f.text_field :name, :size => "20", placeholder: "タロキチ" %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, :size => "25", placeholder: "sample@example.com" %>
  </div>

  <div class="field">
    <%= f.label :password %>
     <% if @minimum_password_length %>
          <%= f.label "パスワード(#{@minimum_password_length}文字以上)" %>
        <% end %>
      <%= f.password_field :password %>

     <%= f.label "パスワード(確認用)" %>
      <%= f.password_field :password_confirmation %></div>


  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
