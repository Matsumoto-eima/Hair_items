
  <thead>
    <tr>
      <th></th>
      <th>アイテム名</th>
      <th>種類</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td>
          <%= image_tag items.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to @item.name, @items, class: "item_#{item.id}" %></td>
        <td><%= item.description%></td>
        <td>
　　<% if @item.category.present? %>
　　　　<%=link_to @item.category,tagsearches_search_path(content:@item.category)%>
　　<% end %>
       </td>
        <!--いいね機能ajax-partial-->
        <td id="favorite-<%= item.id %>">
              <%= render "favorites/btn", item: item %>
          </td>
       <p><%= link_to "#{item.item_comments.count} コメント", item_path(item.id) %></p>
      </tr>
  </tbody>
